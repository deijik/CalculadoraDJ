<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.calculadoradj.MainActivity"
    android:background="@color/dim_foreground_material_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/texto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="35dp"
            android:textAligment="viewEnd"
            android:background="#ffffff"
            android:layout_weight="0.79"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="7"
                android:id="@+id/bt7"
                android:nestedScrollingEnabled="false"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/bt8"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/bt9"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/btsumar"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="4"
                android:id="@+id/bt4"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/bt5"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/bt6"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/btrestar"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="1"
                android:id="@+id/bt1"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/bt2"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/bt3"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/btdividir"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.16">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="0"
                android:id="@+id/bt0"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text=","
                android:id="@+id/btcoma"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark"
                android:nestedScrollingEnabled="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="ME"
                android:id="@+id/btmemoria"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@color/foreground_material_dark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="X"
                android:id="@+id/btmultiplicar"
                android:onClick="obtenerBoton (MainActivity)"
                android:textSize="25dp"
                android:backgroundTint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="C"
                android:id="@+id/btC"
                android:onClick="limpiar"
                android:textSize="25dp"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&lt;"
                android:id="@+id/btborrar"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="M"
                android:id="@+id/btM"
                android:onClick="obtenerBoton"
                android:textSize="25dp"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/btigual"
                android:onClick="resultado (MainActivity)"
                android:textSize="25dp"
                android:backgroundTint="@color/colorAccent" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
